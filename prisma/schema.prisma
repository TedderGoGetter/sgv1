// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isAdmin   Boolean  @default(false)

  email String @unique
  hash  String

  karma Int @default(0)

  firstName String?
  lastName  String?
  userName  String
  posts     Post[]  @relation("Posts")
  favPosts  Post[]  @relation("Favs")
}

model Post {
  id String @id @default(uuid())

  author   User   @relation("Posts", fields: [authorId], references: id)
  authorId String

  legitimacy Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  favBy   User?   @relation("Favs", fields: [favById], references: id)
  favById String?
}

model Inst {
  id String @id @default(uuid())
}

model Song {
  id String @id @default(uuid())
}

model Artist {
  id String @id @default(uuid())
}
