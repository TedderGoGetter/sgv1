// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isAdmin   Boolean  @default(false)

  email String @unique
  hash  String

  karma Int @default(0)

  firstName String?
  lastName  String?
  userName  String
  songs     Song[]  @relation("Songs")
  favPosts  Song[]  @relation("Favs")
  edited    Song[]  @relation("Editors")
}

model Song {
  id String @id @default(uuid())

  author   User   @relation("Songs", fields: [authorId], references: id)
  authorId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favBy   User?   @relation("Favs", fields: [favById], references: id)
  favById String?
  editors User[]  @relation("Editors")

  //Parameters for the actual post
  legitimacy Int
  artist     Artist[]
  instrument Instrument[]

  mediaLink String
  Timestamp Int
}

model Instrument {
  id           String         @id @default(uuid())
  name         String
  type         String
  manufacturer Manufacturer[]
  songs        Song[]
}

model Manufacturer {
  id         String       @id @default(uuid())
  instrument Instrument[]
}

model Artist {
  id   String @id @default(uuid())
  song Song[]
}
